<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/black"
    android:clickable="true"
    android:orientation="horizontal">

    <ImageView
        android:layout_marginTop="5dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="5dp"
        android:layout_above="@id/list_view_default_child_separator"
        android:id="@+id/list_view_default_child_icon" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/list_view_default_child_description"
        android:textSize="24sp"
        android:text="@string/hello_world"
        android:layout_toEndOf="@id/list_view_default_child_icon"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="5dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:layout_above="@id/list_view_default_child_separator"/>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/white"
        android:id="@+id/list_view_default_child_separator"
        android:layout_alignParentBottom="true"/>


</RelativeLayout>