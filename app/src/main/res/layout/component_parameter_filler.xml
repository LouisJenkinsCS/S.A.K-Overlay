<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/component_parameter_filler_method_description_root"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Description"
            android:textSize="20sp"
            android:textStyle="bold" />

        <com.theif519.sakoverlay.Components.View.MaxHeightScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            custom:maxHeight="150dp">

            <TextView
                android:id="@+id/component_parameter_filler_method_description"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Method Description"
                android:textSize="16sp" />

        </com.theif519.sakoverlay.Components.View.MaxHeightScrollView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/component_parameter_filler_method_parameters_root"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Parameters"
            android:textSize="20sp"
            android:textStyle="bold" />

        <com.theif519.sakoverlay.Components.View.MaxHeightScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            custom:maxHeight="150dp">

            <LinearLayout
                android:id="@+id/component_parameter_filler_method_parameters_container"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

        </com.theif519.sakoverlay.Components.View.MaxHeightScrollView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/component_parameter_filler_method_return_root"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Returns"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/component_parameter_filler_method_return_type"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:text="ReturnType"
            android:textSize="16sp" />

        <com.theif519.sakoverlay.Components.View.MaxHeightScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            custom:maxHeight="100dp">

            <TextView
                android:id="@+id/component_parameter_filler_method_return_description"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:text="Return Description"
                android:textSize="16sp" />

        </com.theif519.sakoverlay.Components.View.MaxHeightScrollView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/component_parameter_filler_method_declaration_root"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="vertical">

        <com.theif519.sakoverlay.Components.View.MaxHeightScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            custom:maxHeight="300dp">

            <LinearLayout
                android:id="@+id/component_parameter_filler_container"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical" />

        </com.theif519.sakoverlay.Components.View.MaxHeightScrollView>

    </LinearLayout>

</LinearLayout>