<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Description"
            android:textSize="20sp"
            android:textStyle="bold"
            android:id="@+id/component_parameter_filler_method_description"/>

        <com.theif519.sakoverlay.Components.View.MaxHeightScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            custom:maxHeight="150dp">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Method Description"
                android:textSize="16sp"/>

        </com.theif519.sakoverlay.Components.View.MaxHeightScrollView>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:text="Parameters"
            android:textStyle="bold"
            android:gravity="center"/>

        <com.theif519.sakoverlay.Components.View.MaxHeightScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            custom:maxHeight="150dp">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/component_parameter_filler_method_parameters"
                android:orientation="vertical"/>

        </com.theif519.sakoverlay.Components.View.MaxHeightScrollView>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textStyle="bold"
                android:text="Returns"
                android:gravity="center"/>

            <com.theif519.sakoverlay.Components.View.MaxHeightScrollView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                custom:maxHeight="100dp">

                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="Return Description"
                    android:id="@+id/component_parameter_filler_method_return_description"/>

            </com.theif519.sakoverlay.Components.View.MaxHeightScrollView>

            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="ReturnType"
                android:id="@+id/component_parameter_filler_method_return_type"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textStyle="bold|italic"
            android:text="Method Name"
            android:gravity="center"
            android:id="@+id/component_parameter_filler_method_declaration"/>
        
        <com.theif519.sakoverlay.Components.View.MaxHeightScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            custom:maxHeight="300dp">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/component_parameter_filler_container"
                android:orientation="vertical"/>

        </com.theif519.sakoverlay.Components.View.MaxHeightScrollView>

    </LinearLayout>

</LinearLayout>