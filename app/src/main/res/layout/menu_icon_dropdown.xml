<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:background="@color/transparent_fragment"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Applications"
                android:textSize="20sp"
                android:gravity="center"
                android:textStyle="bold" />

            <com.theif519.sakoverlay.Views.MenuChildItem
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                app:mciDescription="Web Browser"
                app:mciIcon="@drawable/browser"/>

            <com.theif519.sakoverlay.Views.MenuChildItem
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                app:mciDescription="Google Maps"
                app:mciIcon="@drawable/maps"/>

            <com.theif519.sakoverlay.Views.MenuChildItem
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                app:mciDescription="Sticky Note"
                app:mciIcon="@drawable/sticky_note"/>

            <com.theif519.sakoverlay.Views.MenuChildItem
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                app:mciDescription="Screen Recorder"
                app:mciIcon="@drawable/screen_recorder"/>

        </LinearLayout>

    </ScrollView>


</RelativeLayout>