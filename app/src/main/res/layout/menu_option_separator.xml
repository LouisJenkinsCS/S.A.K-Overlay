<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="25dp"
    android:background="@color/transparent_fragment"
    android:id="@+id/menu_option_root"
    android:orientation="horizontal">

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/white"
        android:id="@+id/menu_option_top_separator" />

    <View
        android:layout_width="1dp"
        android:layout_height="fill_parent"
        android:background="@color/white"
        android:layout_below="@id/menu_option_top_separator"
        android:id="@+id/menu_option_left_separator" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/hello_world"
        android:textSize="20sp"
        android:gravity="center"
        android:ellipsize="end"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:textStyle="bold"
        android:id="@+id/menu_option_description"/>

    <View
        android:layout_width="1dp"
        android:layout_height="fill_parent"
        android:background="@color/white"
        android:layout_below="@id/menu_option_top_separator"
        android:id="@+id/menu_option_right_separator"
        android:layout_alignParentEnd="true"/>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/white"
        android:id="@+id/menu_option_bottom_separator"
        android:layout_alignParentBottom="true"/>


</RelativeLayout>