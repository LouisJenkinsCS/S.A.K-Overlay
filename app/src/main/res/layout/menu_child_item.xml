<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/transparent_fragment"
    android:clickable="true"
    android:orientation="horizontal">

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/white"
        android:id="@+id/menu_child_item_top_separator" />

    <ImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_below="@id/menu_child_item_top_separator"
        android:layout_above="@+id/menu_child_item_bottom_separator"
        android:id="@+id/menu_child_item_icon" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/menu_child_item_description"
        android:textSize="24sp"
        android:text="@string/hello_world"
        android:layout_toEndOf="@id/menu_child_item_icon"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:layout_below="@id/menu_child_item_top_separator"
        android:layout_above="@+id/menu_child_item_bottom_separator"/>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/white"
        android:id="@+id/menu_child_item_bottom_separator"
        android:layout_alignParentBottom="true"/>


</RelativeLayout>