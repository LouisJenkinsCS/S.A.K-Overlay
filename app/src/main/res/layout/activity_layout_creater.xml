<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/gray">

    <FrameLayout
        android:id="@+id/layout_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="50dp" />

    <ImageButton
        android:id="@+id/layout_close"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_gravity="top|right"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        android:src="@drawable/close" />

    <HorizontalScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/layout_create_button"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:tag="Button"
                android:text="Button" />

            <Button
                android:id="@+id/layout_create_layout"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:tag="LinearLayout"
                android:text="Layout" />

            <Button
                android:id="@+id/layout_create_text"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:tag="TextView"
                android:text="Text View" />

            <Button
                android:id="@+id/layout_create_edit_text"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:tag="EditText"
                android:text="Edit Text" />

            <Button
                android:id="@+id/layout_create_image"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:tag="ImageView"
                android:text="Image View" />

        </LinearLayout>
    </HorizontalScrollView>

</FrameLayout>
